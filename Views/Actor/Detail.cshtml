@model eTickets.Models.Actor
@{
    ViewData["Title"] = "Chi tiết diễn viên";
}
<div class="row text">
    <div class="col-md-8 offset-md-2">
        <p>
            <h1>View Detail Actor @Model.FullName</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-md-2">
                    <div class="form-group text-center">
                        <img class="border-info rounded-circle" style="max-width:150px" id="ProfilePicturePreview"></img>
                    </div>
                    <div class="form-group"> @* asp-for trong label hien thi ten, trong input để ánh xạ vào model khi nhập *@  
                        <label asp-for="ProfilePictureUrl" class="control-label"></label>
                        <input asp-for="ProfilePictureUrl" class="form-control" readonly>
                    </div>
                    <div class="form-group"> 
                        <label asp-for="FullName" class="control-label" ></label>
                        <input asp-for="FullName" class="form-control" readonly>
                    </div>
                    <div class="form-group">
                        <label asp-for="Bio" class="control-label"></label>
                        <input asp-for="Bio" class="form-control" readonly></input>
                    </div>
                    <div class="form-group">    
                    <a asp-action="Index" class="btn btn-outline-secondary">Danh sách diễn viên</a>
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-success float-right">Sửa</a>
                    </div>
            </div>
        </div>
        
    </div>

</div>
@section Scripts {
    <script>

        $(document).ready(function () {
            var output = document.getElementById('ProfilePicturePreview');
            output.src = $("#ProfilePictureUrl").val();
        })  
    </script>
}