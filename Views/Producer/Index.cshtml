@model IEnumerable<Producer>
@{
    ViewData["Title"] = "List Producer";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <table class="table">
            <thead>
                <tr class="text-center">
                    <th>@Html.DisplayNameFor(Model => Model.ProfilePictureURL)</th>
                    <th>@Html.DisplayNameFor(Model=>Model.FullName)</th>
                    <th>@Html.DisplayNameFor(Model => Model.Bio)</th>
                    <th>Chức năng</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var producer in Model)
                {
                  <tr class="text-center">
                    <td class="align-middle">
                        <img class="rounded-circle" src="@producer.ProfilePictureURL" alt="@producer.FullName" style="max-width:100px; max-height:100px"/>
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(producelModel=>producer.FullName)
                    </td>
                    <td class="align-middle">
                        @producer.Bio
                    </td>
                        <td class="align-middle">
                            <a asp-action="Edit" asp-route-id="@producer.Id" class="btn btn-outline-primary"> <i class="bi bi-pencil-square"></i> Edit</a> |
                            <a asp-action="Detail" asp-route-id="@producer.Id" class="btn btn-outline-info"> <i class="bi bi-eye"></i> Detail</a> |
                            <a asp-action="Delete" asp-route-id="@producer.Id" class="btn btn-danger text-white"><i class="bi bi-trash"></i> Delete</a>
                        </td>
                    </tr>

                }
                
                   <a asp-action="Add" class="btn btn-outline-success float-right" >Thêm mới</a>
            </tbody>
   
</table>

    </div>

</div>
